<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FilmsApp.Views.BookmarkEdit"
             Title="BookmarkEdit">
    <Grid Margin="10"
          RowDefinitions="auto, *, auto">
        <Label Text="Изменение списка" FontSize="24" FontAttributes="Bold"/>
        <ScrollView x:Name="RootContent"
                    Grid.Row="1"/>
        <Button Grid.Row="2"
                Text="назад"
                Command="{Binding ExitCommand}"/>
    </Grid>
</ContentPage>